<div class="container">
    <div class="header login">
        <h2>Let us get you in.</h2>
        {{#if error}}
        <h4 class="error">{{errorMsg}}</h4>
        {{/if}}
    </div>
    <div class="main">
        <div class="form login">
            <form method="POST">
                <div class="inputs">
                    <input type="email" id="email" name="email" required>
                    <label for="email">Email Address</label>
                    <input type="password" id="password" name="password" required>
                    <label for="password">Password</label>
                </div>
                <button class="bt login">LOG IN</button>
            </form> 
        </div>
        <p>If you are not a member of this incredibly reactive community please <a href="/register">register here</a>.</p>
    </div>
</div>