<div class="container">
    <div class="header profile-edit">
        <h2>You can update your information here.</h2>
        {{#if error}}
        <h4 class="error">{{errorMsg}}</h4>
        {{/if}}
    </div>
    <div class="main">
        <div class="form profile-edit">
            <form method="POST">
                <div class="inputs">
                    <input type="text" id="firstname" name="firstname" value="{{first_name}}"><br>
                    <label for="firstname">First Name</label>
                    <input type="text" id="lastname" name="lastname" value="{{last_name}}"><br>
                    <label for="lastname">Last Name</label>
                    <input type="email" id="email" name="email" value="{{email}}"><br>
                    <label for="email">Email Address</label>
                    <input type="password" id="password" name="password" minlength="8"><br>
                    <label for="password">Password</label>
                    <input type="text" id="age" name="age" value="{{age}}"><br>
                    <label for="age">Your Age</label>
                    <input type="text" id="city" name="city" value="{{city}}"><br>
                    <label for="city">City</label>
                    <input type="url" id="url" name="url" value="{{url}}"><br>
                    <label for="url">Personal Page</label>
                </div>
                <button class="bt profile-edit">UPDATE</button>
            </form>
        </div>
        <div class="form delete-profile">
            <form method="POST">
                <input type="hidden" name="delete" id="delete">
                <button class="bt delete">DELETE ACCOUNT</button>
            </form>
        </div>
    </div>
</div>
