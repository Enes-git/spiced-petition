<div class="container">
    <div class="header profile-edit">
        <h2>You can update your information here.</h2>
        {{#if error}}
        <h4 class="error">{{errorMsg}}</h4>
        {{/if}}
        {{#if success}}
        <h4 class="success">{{successMsg}}</h4>
        {{/if}}
    </div>
    <div class="main">
        <div class="form profile-edit">
            <form method="POST">
                <div class="inputs">
                    {{#rows}}
                    <div class="name">
                        <input type="text" id="firstname" name="firstname" value="{{first_name}}" required><br>
                        <label for="firstname">First Name</label><br>
                    </div>
                    <div class="lastname">
                        <input type="text" id="lastname" name="lastname" value="{{last_name}}" required><br>
                        <label for="lastname">Last Name</label><br>
                    </div>
                    <div class="email">
                        <input type="email" id="email" name="email" value="{{email}}" required><br>
                        <label for="email">Email Address</label><br>
                    </div>
                    <div class="password">
                        <input type="password" id="password" name="password" minlength="8"><br>
                        <label for="password">Password</label><br>
                    </div>
                    <div class="age">
                        <input type="text" id="age" name="age" value="{{age}}"><br>
                        <label for="age">Your Age</label><br>
                    </div>
                    <div class="city">
                        <input type="text" id="city" name="city" value="{{city}}"><br>
                        <label for="city">City</label><br>
                    </div>
                    <div class="url">
                        <input type="url" id="url" name="url" value="{{url}}"><br>
                        <label for="url">Personal Page</label>
                    </div>
                    {{/rows}}
                </div>
                <div class="buttons">
                    <button class="bt profile-edit">UPDATE ACCOUNT</button>
                    <button><a href="/petition">BACK TO PETITION</button>
                </div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
            </form>
        </div>
